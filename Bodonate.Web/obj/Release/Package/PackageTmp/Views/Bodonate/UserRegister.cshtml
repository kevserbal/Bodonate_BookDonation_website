@model Bodonate.Web.Views.ViewModels.UserModel
@{
    ViewBag.Title = "UserRegister";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
    <link href="~/Content/RegisterStyle.css" rel="stylesheet" type="text/css" />
    <title>UserRegister</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Client Signup Form template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="//fonts.googleapis.com/css?family=Old+Standard+TT:400,400i,700" rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'><!--web font-->


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Navigation.css">

</head>
<body>



    <div style="display:inline-block; margin-top:0px; height:120%; width:100%;">




        <div id="navigation" class="naviga">
            <p class="bodo">Bodonate Anasayfa </p>
            <p class="carbon">&#64;CarbonSoft</p>
            <div class="nav1">

                <div class="home">@Html.ActionLink("Home", "Index", "Bodonate", User, new { @class = "home" })</div>
                <div class="home">@Html.ActionLink("Register", "UserRegister", "Bodonate", new { }, new { @class = "home" })</div>
                <div class="home">@Html.ActionLink("İletişim", "Contact", "Bodonate", new { }, new { @class = "home" })</div>
            </div>
        </div>


        @using (Html.BeginForm("UserRegister", "Bodonate", FormMethod.Post))
        {
            <div class="main main-agileits" style="height:100%; width:30%; margin-top:100px; margin-left: 35%;">

                <div class="main-agilerow" style="height:100%; width:100%; ">
                    <div class="signup-wthreetop">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        @if (ViewBag.Message != null)
                        {
                            <div class="form-group">


                                <div class="col-lg-12">@ViewBag.Message</div>
                            </div>


                        }

                        <h2>Kullanıcı Kayıt</h2>
                        <p><i><b><font size="1">Hemen kayıt ol ve kitaplarını paylaş!</font></b></i></p>
                    </div>
                    <div class="contact-wthree">
                        <form action="#" method="post">
                            <h3>Step 1 :</h3>
                            <div class="form-w3step1">

                                <div class="edit-form">
                                    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "  agileits-btm edit-form", @placeholder = "Ad", @requried = "required" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="edit-form">
                                    @Html.TextBoxFor(model => model.SurName, htmlAttributes: new { @class = "  agileits-btm edit-form", @placeholder = "Soyad", @requried = "required" })
                                    @Html.ValidationMessageFor(model => model.SurName, "", new { @class = "text-danger" })
                                </div>
                                <div class="edit-form">
                                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = " agileits-btm edit-form", @placeholder = "Email", @requried = "required" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <h3>Step 2 :</h3>
                            <div class="form-w3step1">

                                <div class="edit-form">
                                    @Html.TextBoxFor(model => model.Username, htmlAttributes: new { @class = "agileits-btm edit-form", @placeholder = "Kullanıcı Adı", @requried = "required" })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                                <div class="edit-form">
                                    @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "agileits-btm edit-form", @placeholder = "Şifre", @requried = "required" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="edit-form">
                                    @Html.PasswordFor(model => model.Confirmpassword, htmlAttributes: new { @class = "agileits-btm edit-form", @placeholder = "Şifre Tekrar", @requried = "required" })
                                    @Html.ValidationMessageFor(model => model.Confirmpassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <input type="submit" value="KAYIT">
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.10/jquery.validate.unobtrusive.js"></script>
